/* pages/door/order_info.wxss */

page {
  background: #f5f5f5;
}

.top {
  background: #37bca1;
  height: 124rpx;
  position: absolute;
  top: 0rpx;
  width: 100%;
  z-index: -1;
}

/* to do main */

.main {
  padding: 0rpx 20rpx;
}

.state {
  color: white;
  font-size: 30rpx;
  height: 66rpx;
  line-height: 66rpx;
}

.state image {
  margin-right: 16rpx;
  vertical-align: middle;
  width: 34rpx;
}

/* addr */

.addr_info {
  background: white;
  border-radius: 8rpx;
  padding: 0px 35rpx 20rpx;
}

.addr_info_pre {
  font-size: 30rpx;
  font-weight: bold;
  height: 74rpx;
  line-height: 74rpx;
}

.addr_info_pre image {
  margin-right: 18rpx;
  vertical-align: middle;
  width: 36rpx;
}

.addr_info_name {
  font-size: 30rpx;
  height: 50rpx;
  line-height: 50rpx;
  margin-top: 7rpx;
}

.addr_info_name text {
  margin-left: 160rpx;
}

.addr_info_addr {
  color: #666;
  font-size: 26rpx;
  min-height: 50rpx;
  line-height: 50rpx;
}

/* order */

.list-item {
  background: white;
  border-radius: 8rpx;
  margin-top: 15rpx;
}

.list-item .weui-panel__hd {
  color: #222;
  font-size: 30rpx;
  font-weight: bold;
  padding: 26rpx 30rpx;
}

.list-item .weui-panel__hd image {
  margin-right: 18rpx;
  vertical-align: middle;
  width: 36rpx;
}

.list-item .weui-panel__hd::after {
  border: 0rpx;
}

.list-item .weui-media-box {
  padding: 4rpx 30rpx 24rpx;
}

.list-item .weui-media-box__thumb {
  border-radius: 50%;
}

.list-item .weui-media-box__desc image {
  margin-top: -4rpx;
  vertical-align: middle;
  width: 30rpx;
}

.list-item .weui-panel__ft {
  color: #999;
  font-size: 26rpx;
  padding: 14rpx 30rpx;
}

.list-item .weui-panel__ft {
  position: relative;
}

.list-item .weui-panel__ft::before {
  border-top: 2rpx solid #e6e6e6;
  display: table;
  content: " ";
  position: absolute;
  top: 0rpx;
  width: 100%;
}

.weui-panel__ft_desc {
  height: 40rpx;
  line-height: 40rpx;
}

/* footer */

.buttons {
  background: white;
  box-sizing: border-box;
  bottom: 0rpx;
  position: absolute;
  padding: 22rpx;
  text-align: right;
  width: 100%;
}

.buttons-button {
  border: 1px solid #cdcdcd;
  border-radius: 27rpx;
  color: #666;
  display: inline-block;
  font-size: 28rpx;
  height: 54rpx;
  line-height: 54rpx;
  text-align: center;
  width: 150rpx;
  display: inline-block;
  margin-left: 20rpx;
}

.buttons-button-act {
  border-color: #37bca1;
  color: #37bca1;
}
