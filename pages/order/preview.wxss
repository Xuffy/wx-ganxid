/* pages/order/preview.wxss */

page {
  background: #f5f5f5;
  box-sizing: border-box;
  padding: 20rpx;
}

.addr {
  background: white;
  border-radius: 8rpx;
}

.addr_none {
  text-align: center;
}

.addr_none image {
  vertical-align: middle;
  width: 180rpx;
}

.addr_none_txt {
  font-size: 28rpx;
  margin: 20rpx 0rpx 50rpx;
  text-align: center;
}

.addr_none_txt text {
  color: #37bca1;
}

.addr_info {
  border-bottom: 2rpx solid #e6e6e6;
  padding: 0px 35rpx;
}

.addr_info_pre {
  font-size: 30rpx;
  font-weight: bold;
  height: 74rpx;
  line-height: 74rpx;
}

.addr_info_pre image {
  margin-right: 18rpx;
  vertical-align: middle;
  width: 36rpx;
}

.addr_info_name {
  font-size: 30rpx;
  height: 50rpx;
  line-height: 50rpx;
  margin-top: 7rpx;
}

.addr_info_name text {
  margin-left: 160rpx;
}

.addr_info_addr {
  color: #666;
  font-size: 26rpx;
  min-height: 50rpx;
  line-height: 50rpx;
}

.addr_time {
  font-size: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0px 35rpx;
  display: inline-block;
}

.dateTime-box {
  font-size: 30rpx;
  padding: 0px 35rpx;
  position: relative;
  height: 80rpx;
  line-height: 80rpx;
}
.dateTime-box .label{
  display: inline-block;
}

.dateTime-box .value{
  display: inline-block;
  position: absolute;
  right: 35rpx;
  top: 0;
  line-height: 80rpx;
  min-width: 100rpx;
}

