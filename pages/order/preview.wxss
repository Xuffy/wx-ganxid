  float: right;
  height: 80rpx;
  line-height: 80rpx;
  text-align: right;
  width: 200rpx;
} */

.door {
  margin-top: 20rpx;
  padding-bottom: 18rpx;
}

.door_info {
  padding: 0px 35rpx;
}

/*****************/

.list-item {
  margin-top: 38rpx;
}

.list-item image.left {
  float: left;
  vertical-align: middle;
  width: 200rpx;
}

.list-item .right {
  float: left;
  margin-left: 24rpx;
  width: 416rpx;
}

.list-item .right_name {
  font-size: 32rpx;
}

.list-item .right_name text {
  background: #73d9b4;
  color: white;
  display: inline-block;
  font-size: 24rpx;
  height: 32rpx;
  line-height: 32rpx;
  margin-left: 10rpx;
  text-align: center;
  width: 96rpx;
}

.list-item .right_phone {
  color: #666;
  font-size: 26rpx;
  margin-top: 8rpx;
}

.list-item .right_phone image {
  margin-right: 10rpx;
  width: 22rpx;
}

.list-item .right_addr {
  margin-top: 5rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 100%;
}

.list-item .right_star image {
  margin-right: 11rpx;
  vertical-align: middle;
  width: 30rpx;
}

.button {
  bottom: 0rpx;
  background: white;
  color: #37bca1;
  font-size: 34rpx;
  height: 100rpx;
  left: 0rpx;
  line-height: 100rpx;
  text-align: center;
  position: fixed;
  width: 100%;
}
